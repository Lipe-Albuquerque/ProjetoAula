		return null;
	}

	@Override
	public Paciente capturarValores() {
		return null;
	}

	@Override
	public void exibirDetalhes(Paciente completo) {
		if (completo == null) {
			System.out.println("Não foi possivel exibir os detalhes, item não localizado");
		} else {
			System.out.println(completo.toString());
		}

	}

}
