	@Override
	public void adicionar() {
		Paciente novo = capturarValores();
		if (buscar(novo) == null) {
			lista.put(novo.getName(), novo);
		} else {
			System.out.println("Jï¿½ existe um registro com CHAVE:" + novo.getName());

		}
	}

